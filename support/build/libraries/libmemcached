#!/bin/bash
# Build Path: /app/.heroku/php/

OUT_PREFIX=$1

# fail hard
set -o pipefail
# fail harder
set -eux

DEFAULT_VERSION="1.0.18"
dep_version=${VERSION:-$DEFAULT_VERSION}
dep_dirname=libmemcached-${dep_version}
dep_archive_name=${dep_dirname}.tar.gz
dep_url=https://launchpad.net/libmemcached/1.0/${dep_version}/+download/${dep_archive_name}

# we need libsasl2-dev
apt-get install -y libsasl2-dev || { echo "Failed to install libsasl2-dev; are you running this in a Docker build?"; exit 1; }

echo "-----> Building libmemcached ${dep_version}..."

curl -L ${dep_url} | tar xz
pushd ${dep_dirname}
./configure --prefix=${OUT_PREFIX} --without-memcached
make -s -j 9
make install -s
popd

echo "-----> Done."
